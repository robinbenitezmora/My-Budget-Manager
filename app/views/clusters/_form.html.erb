<%= form_with(model: cluster) do |form| %>
  <% if cluster.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cluster.errors.count, "error") %> prohibited this cluster from being saved:</h2>

      <ul>
        <% cluster.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
   <%= form.select :icon, [
       ["Investment", "investment.png"], ["Bills", "bills.png" ],
       ["Healthcare", "health.png"], ["Education", "education.png"],
       ["Transportation", "public-transport.png"], ["Travels/Trips", "travel.png"],
       ["Food, Snacks, Restaurants", "food.png"], ["Gym and Self-care", "gym.png"],
       ["Entertainment", "entertainment.png"], ["Beauty", "beauty.png"], ["Shopping", "shopping.png"],
       ["Emergencies", "emergency.png"]
       ], class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'SAVE' %>
  </div>
<% end %>
